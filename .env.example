# Server Configuration
PORT=4000

# Application Branding
APP_NAME=PapDocAuthX
APP_VERSION=2

# File Upload Configuration
# Maximum file size in MB (applies to document uploads)
MAX_FILE_SIZE_MB=5

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# MongoDB Connection
MONGO_URI=mongodb://127.0.0.1:27017/your_database_name

# PostgreSQL Connection
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=<REDACTED_JWT_SECRET>
JWT_EXPIRES_IN=7d

# Document Hash Chain Secret
HASH_SECRET=<REDACTED_HASH_SECRET>

# Superadmin Setup Configuration
# Set to true only for initial setup, then set to false
ALLOW_SUPERADMIN_REGISTRATION=false
# Setup key required for superadmin registration - change this!
SETUP_KEY=<REDACTED_SETUP_KEY>

# Default Credentials for Seeding (Development Only)
SUPERADMIN_EMAIL=superadmin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=<REDACTED_DEV_PASSWORD>
DEFAULT_USER_PASSWORD=<REDACTED_DEV_PASSWORD>